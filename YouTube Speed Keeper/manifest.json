{
  "manifest_version": 3,
  "name": "YouTube Speed Keeper",
  "version": "1.0",
  "description": "Remembers and applies your preferred YouTube playback speed across all videos.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}